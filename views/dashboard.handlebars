<!--all posts for logged in user-->
{{#if books.length}}
<section>
    <h1>My Book Dashboard</h1>

    <form class="new-book-form">
        <div>
            <label for="book-title" class="book-title">Title</label>
            <input type="text" id="book-title" name="book-title" />
        </div>

        <div>
            <label for="book-review" class="book-review">Review</label>
            <input id="book-review" name="book-review" />
        </div>

        <button type="submit" class="book-btn">Add Book</button>
    </form>
</section>
<ul>
    {{#each books as |book|}}
    <li>
        {{>books book}}

    </li>
    {{/each}}
</ul>
</section>
{{/if}}
<div>
    <a href="/dashboard/" class="add-link">+ Add A Book</a>
</div>