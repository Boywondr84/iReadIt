<!--login form-->
<section class="uk-flex-inline">
    <h2>Login...</h2>
    <form class="login-form">
        <div class="uk-card uk-card-default uk-card-hover uk-card-body">
        <div>
            <label for="email-login">Email:</label>
            <input type="text" id="email-login" name="e-login"/>
        </div>

        <div>
            <label for="password-login">Password:</label>
            <input type="password" id="password-login" name="p-login"/>
        </div>

        <div>
            <button class="uk-button uk-button-link uk-button-large" id="button-login" type="submit">Login</button>
        </div>
        </div>
    </form>

<!--signup form-->

