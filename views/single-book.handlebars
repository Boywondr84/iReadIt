<!--book partial-->
<div class="books-and-reviews uk-card "> 
{{>books book}}
{{>reviews book.reviews}}
</div> 
<!--review form-->

<form class="review-form">
    <div>
        <textarea name="review-body"></textarea>
    </div>

    <div class="single-page-buttons">
       <button class="uk-button uk-button-link uk-button-large hover-underline-animation" type="submit">Add review</button>
       <button class="uk-button uk-button-link uk-button-large hover-underline-animation" type="click" id="upvote-btn">Upvote book</button>
       <button class="uk-button uk-button-link uk-button-large hover-underline-animation" type="click" id="downvote-btn">Downvote book</button>
    </div>
</form>

<div class="uk-cover-container">
        <img src="https://cdn.pixabay.com/photo/2015/10/09/08/45/book-978888_1280.jpg" atl="" uk-cover>
        </div>


<script src="/javascript/review.js"></script>
<script src="/javascript/book-votes.js"></script>